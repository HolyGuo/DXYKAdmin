            , search = router.search;
        form.render();
        $("#appId").val(layui.setter.appId);
        //提交
        form.on('submit(LAY-user-login-submit)', function (obj) {

            //请求登入接口
            admin.req({
                url: 'api/Login/SignIn' //实际使用请改成服务端真实接口
