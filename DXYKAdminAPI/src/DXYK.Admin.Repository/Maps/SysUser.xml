    <!--获取数据列-->
    <Statement Id="Query" >
      SELECT
      <Include RefId="AllCols" />
      From sys_user T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      <IsNotEmpty Prepend="Limit" Property="limit">@limit</IsNotEmpty>
    </Statement>


    <!--获取分页数据-->
    <Statement Id="QueryByPage" >
      Select
      <Include RefId="AllCols" />
      From sys_user As T
