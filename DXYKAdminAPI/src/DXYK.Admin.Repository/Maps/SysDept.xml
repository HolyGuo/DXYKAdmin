<SmartSqlMap Scope="SysDept" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">

  <Statements>

    <Statement Id="AllCols">
      T.id,T.dept_name,T.parent_id,T.leader_id,T.dept_type,T.dept_address,T.telphone,T.email,T.sort,T.group_id,T.re_vision,T.created_by,T.created_time,T.updated_by,T.updated_time,T.deleted_by,T.deleted_time
    </Statement>
    <Statement Id="QueryParams">
      <Where>
        <IsNotEmpty Prepend="And" Property="id">
          T.id = @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="dept_name">
          T.dept_name = @dept_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="parent_id">
          T.parent_id = @parent_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="leader_id">
          T.leader_id = @leader_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="dept_type">
          T.dept_type = @dept_type
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="dept_address">
          T.dept_address = @dept_address
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="telphone">
          T.telphone = @telphone
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="email">
          T.email = @email
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="sort">
          T.sort = @sort
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="group_id">
          T.group_id = @group_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="re_vision">
          T.re_vision = @re_vision
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_by">
          T.created_by = @created_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_time">
          T.created_time = @created_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_by">
          T.updated_by = @updated_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_time">
          T.updated_time = @updated_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_by">
          T.deleted_by = @deleted_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_time">
          T.deleted_time = @deleted_time
        </IsNotEmpty>
      </Where>
    </Statement>

    <!--新增-->
    <Statement Id="Insert">
      <IdGenerator Name="SnowflakeId" Id="id"/>
      INSERT INTO sys_dept
      (
      id,
      dept_name,
      parent_id,
      leader_id,
      dept_type,
      dept_address,
      telphone,
      email,
      sort,
      group_id,
      re_vision,
      created_by,
      created_time,
      updated_by,
      updated_time,
      deleted_by,
      deleted_time
      )
      VALUES
      (
      @id,
      @dept_name,
      @parent_id,
      @leader_id,
      @dept_type,
      @dept_address,
      @telphone,
      @email,
      @sort,
      @group_id,
      @re_vision,
      @created_by,
      @created_time,
      @updated_by,
      @updated_time,
      @deleted_by,
      @deleted_time
      )
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete From sys_dept
      Where id=@id
    </Statement>
    <!--更新-->
    <Statement Id="Update">
      UPDATE sys_dept
      <Set>
        <IsProperty Prepend="," Property="dept_name">
          dept_name = @dept_name
        </IsProperty>
        <IsProperty Prepend="," Property="parent_id">
          parent_id = @parent_id
        </IsProperty>
        <IsProperty Prepend="," Property="leader_id">
          leader_id = @leader_id
        </IsProperty>
        <IsProperty Prepend="," Property="dept_type">
          dept_type = @dept_type
        </IsProperty>
        <IsProperty Prepend="," Property="dept_address">
          dept_address = @dept_address
        </IsProperty>
        <IsProperty Prepend="," Property="telphone">
          telphone = @telphone
        </IsProperty>
        <IsProperty Prepend="," Property="email">
          email = @email
        </IsProperty>
        <IsProperty Prepend="," Property="sort">
          sort = @sort
        </IsProperty>
        <IsProperty Prepend="," Property="group_id">
          group_id = @group_id
        </IsProperty>
        <IsProperty Prepend="," Property="re_vision">
          re_vision = @re_vision
        </IsProperty>
        <IsProperty Prepend="," Property="created_by">
          created_by = @created_by
        </IsProperty>
        <IsProperty Prepend="," Property="created_time">
          created_time = @created_time
        </IsProperty>
        <IsProperty Prepend="," Property="updated_by">
          updated_by = @updated_by
        </IsProperty>
        <IsProperty Prepend="," Property="updated_time">
          updated_time = @updated_time
        </IsProperty>
        <IsProperty Prepend="," Property="deleted_by">
          deleted_by = @deleted_by
        </IsProperty>
        <IsProperty Prepend="," Property="deleted_time">
          deleted_time = @deleted_time
        </IsProperty>
      </Set>
      Where id=@id
    </Statement>

    <!--获取数据列-->
    <Statement Id="Query" >
      SELECT
      <Include RefId="AllCols" />
      From sys_dept T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      <IsNotEmpty Prepend="Limit" Property="limit">@limit</IsNotEmpty>
    </Statement>


    <!--获取分页数据-->
    <Statement Id="QueryByPage" >
      Select
      <Include RefId="AllCols" />
      From sys_dept As T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      Limit @limit Offset @offset
    </Statement>




    <!--获取记录数-->
    <Statement Id="GetRecord">
      Select Count(1) From sys_dept T
      <Include RefId="QueryParams" />
    </Statement>


    <!--获取表映射实体-->
    <Statement Id="GetEntity" >
      Select
      <Include RefId="AllCols" />
      From sys_dept As T
      <Where Min="1">
        <IsNotEmpty Prepend="And" Property="id">
          T.id= @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="dept_name">
          T.dept_name= @dept_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="parent_id">
          T.parent_id= @parent_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="leader_id">
          T.leader_id= @leader_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="dept_type">
          T.dept_type= @dept_type
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="dept_address">
          T.dept_address= @dept_address
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="telphone">
