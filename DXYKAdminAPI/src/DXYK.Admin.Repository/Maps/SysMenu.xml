<!--新增-->
<Statement Id="Insert">
    INSERT INTO sys_menu
    (
      id,
      title,
      parent_id,
      icon,
      menu_type,
      jump,
      sort,
      group_id,
      re_vision,
      created_by,
      created_time,
      updated_by,
      updated_time,
      deleted_by,
      deleted_time
    )
    VALUES
    (
      @id,
      @title,
      @parent_id,
      @icon,
      @menu_type,
      @jump,
      @sort,
      @group_id,
      @re_vision,
      @created_by,
      @created_time,
      @updated_by,
      @updated_time,
      @deleted_by,
      @deleted_time
    )
</Statement>

<!--删除-->
    <Statement Id="Delete">
        Delete From sys_menu
        Where id=@id
    </Statement>
<!--更新-->
<Statement Id="Update">
    UPDATE sys_menu
    <Set>
                <IsProperty Prepend="," Property="title">
                    title = @title
                </IsProperty>
                <IsProperty Prepend="," Property="parent_id">
                    parent_id = @parent_id
                </IsProperty>
                <IsProperty Prepend="," Property="icon">
                    icon = @icon
                </IsProperty>
                <IsProperty Prepend="," Property="menu_type">
                    menu_type = @menu_type
                </IsProperty>
                <IsProperty Prepend="," Property="jump">
                    jump = @jump
                </IsProperty>
                <IsProperty Prepend="," Property="sort">
                    sort = @sort
                </IsProperty>
                <IsProperty Prepend="," Property="group_id">
                    group_id = @group_id
                </IsProperty>
                <IsProperty Prepend="," Property="re_vision">
                    re_vision = @re_vision
                </IsProperty>
                <IsProperty Prepend="," Property="created_by">
                    created_by = @created_by
                </IsProperty>
                <IsProperty Prepend="," Property="created_time">
                    created_time = @created_time
                </IsProperty>
                <IsProperty Prepend="," Property="updated_by">
                    updated_by = @updated_by
                </IsProperty>
                <IsProperty Prepend="," Property="updated_time">
                    updated_time = @updated_time
                </IsProperty>
                <IsProperty Prepend="," Property="deleted_by">
                    deleted_by = @deleted_by
                </IsProperty>
                <IsProperty Prepend="," Property="deleted_time">
                    deleted_time = @deleted_time
                </IsProperty>
    </Set>
    Where id=@id
</Statement>

<!--获取数据列-->
<Statement Id="Query" >
    SELECT
    <Include RefId="AllCols" />
    From sys_menu T
    <Include RefId="QueryParams" />
    <Switch Prepend="Order By" Property="OrderBy">
        <Default>
            T.id Desc
        </Default>
    </Switch>
    <IsNotEmpty Prepend="Limit" Property="limit">@limit</IsNotEmpty>
</Statement>


    <!--获取分页数据-->
    <Statement Id="QueryByPage" >
        Select
        <Include RefId="AllCols" />
        From sys_menu As T
        <Include RefId="QueryParams" />
        <Switch Prepend="Order By" Property="OrderBy">
            <Default>
                T.id Desc
            </Default>
        </Switch>
        Limit @limit Offset @offset
    </Statement>




<!--获取记录数-->
<Statement Id="GetRecord">
    Select Count(1) From sys_menu T
    <Include RefId="QueryParams" />
</Statement>


