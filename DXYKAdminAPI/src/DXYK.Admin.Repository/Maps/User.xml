<SmartSqlMap Scope="User" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <Statements>
    <!--返回列-->
    <Statement Id="AllCols">
      T.id,T.true_name,T.nick_name,T.login_name,T.login_pwd,T.sex,T.head_pic,T.role_id,T.dept_id,T.last_login_time,T.group_id,T.re_vision,T.created_time,T.updated_by,T.updated_time
    </Statement>
    
    <!--登录验证-->
    <Statement Id="LoginIn">
      SELECT 
      <Include RefId="AllCols" />
      From sys_user T
      <Where Min="1">
        <IsNotEmpty Prepend="AND" Property="loginname">
          T.login_name = @loginname
        </IsNotEmpty>
      </Where>
      Limit 1
    </Statement>
    

  </Statements>
</SmartSqlMap>