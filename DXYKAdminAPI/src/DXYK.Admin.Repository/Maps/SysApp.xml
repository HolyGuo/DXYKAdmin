<SmartSqlMap Scope="SysApp" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">

  <Statements>

    <Statement Id="AllCols">
      T.id,T.app_name,T.short_name,T.description,T.is_enable,T.logo,T.sort,T.group_id,T.re_vision,T.created_by,T.created_time,T.updated_by,T.updated_time,T.deleted_by,T.deleted_time
    </Statement>
    <Statement Id="QueryParams">
      <Where>
        <IsNotEmpty Prepend="And" Property="id">
          T.id = @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="app_name">
          T.app_name = @app_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="short_name">
          T.short_name = @short_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="description">
          T.description = @description
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="is_enable">
          T.is_enable = @is_enable
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="logo">
          T.logo = @logo
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="sort">
          T.sort = @sort
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="group_id">
          T.group_id = @group_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="re_vision">
          T.re_vision = @re_vision
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_by">
          T.created_by = @created_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_time">
          T.created_time = @created_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_by">
          T.updated_by = @updated_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_time">
          T.updated_time = @updated_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_by">
          T.deleted_by = @deleted_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_time">
          T.deleted_time = @deleted_time
        </IsNotEmpty>
      </Where>
    </Statement>

    <!--新增-->
    <Statement Id="Insert">
      <IdGenerator Name="SnowflakeId" Id="id"/>
      INSERT INTO sys_app
      (
      id,
      app_name,
      short_name,
      description,
      is_enable,
      logo,
      sort,
      group_id,
      re_vision,
      created_by,
      created_time,
      updated_by,
      updated_time,
      deleted_by,
      deleted_time
      )
      VALUES
      (
      @id,
      @app_name,
      @short_name,
      @description,
      @is_enable,
      @logo,
      @sort,
      @group_id,
      @re_vision,
      @created_by,
      @created_time,
      @updated_by,
      @updated_time,
      @deleted_by,
      @deleted_time
      );
      Select @Id;
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete From sys_app
      Where id=@id
    </Statement>
    <!--更新-->
    <Statement Id="Update">
      UPDATE sys_app
      <Set>
        <IsProperty Prepend="," Property="app_name">
          app_name = @app_name
        </IsProperty>
        <IsProperty Prepend="," Property="short_name">
          short_name = @short_name
        </IsProperty>
        <IsProperty Prepend="," Property="description">
          description = @description
        </IsProperty>
        <IsProperty Prepend="," Property="is_enable">
          is_enable = @is_enable
        </IsProperty>
        <IsProperty Prepend="," Property="logo">
          logo = @logo
        </IsProperty>
        <IsProperty Prepend="," Property="sort">
          sort = @sort
        </IsProperty>
        <IsProperty Prepend="," Property="group_id">
          group_id = @group_id
        </IsProperty>
        <IsProperty Prepend="," Property="re_vision">
          re_vision = @re_vision
        </IsProperty>
        <IsProperty Prepend="," Property="created_by">
          created_by = @created_by
        </IsProperty>
        <IsProperty Prepend="," Property="created_time">
          created_time = @created_time
        </IsProperty>
        <IsProperty Prepend="," Property="updated_by">
          updated_by = @updated_by
        </IsProperty>
        <IsProperty Prepend="," Property="updated_time">
          updated_time = @updated_time
        </IsProperty>
        <IsProperty Prepend="," Property="deleted_by">
          deleted_by = @deleted_by
        </IsProperty>
        <IsProperty Prepend="," Property="deleted_time">
          deleted_time = @deleted_time
        </IsProperty>
      </Set>
      Where id=@id
    </Statement>

    <!--获取数据列-->
    <Statement Id="Query" >
      SELECT
      <Include RefId="AllCols" />
      From sys_app T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      <IsNotEmpty Prepend="Limit" Property="limit">@limit</IsNotEmpty>
    </Statement>


    <!--获取分页数据-->
    <Statement Id="QueryByPage" >
      Select
      <Include RefId="AllCols" />
      From sys_app As T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      Limit @limit Offset @offset
    </Statement>




    <!--获取记录数-->
    <Statement Id="GetRecord">
      Select Count(1) From sys_app T
      <Include RefId="QueryParams" />
    </Statement>


    <!--获取表映射实体-->
    <Statement Id="GetEntity" >
      Select
      <Include RefId="AllCols" />
      From sys_app As T
      <Where Min="1">
        <IsNotEmpty Prepend="And" Property="id">
          T.id= @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="app_name">
          T.app_name= @app_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="short_name">
          T.short_name= @short_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="description">
          T.description= @description
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="is_enable">
          T.is_enable= @is_enable
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="logo">
          T.logo= @logo
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="sort">
          T.sort= @sort
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="group_id">
          T.group_id= @group_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="re_vision">
          T.re_vision= @re_vision
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_by">
          T.created_by= @created_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_time">
          T.created_time= @created_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_by">
          T.updated_by= @updated_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_time">
          T.updated_time= @updated_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_by">
          T.deleted_by= @deleted_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_time">
          T.deleted_time= @deleted_time
        </IsNotEmpty>
      </Where>
      Limit 1
    </Statement>


    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From sys_app T
      <Include RefId="QueryParams" />
    </Statement>


    <!--************************************自定义SQL查询************************************-->
    <!---自定义  查询参数-->
    <Statement Id="QueryDataParams">
      <Where>
        <IsNotEmpty Prepend="And" Property="id">
          T.id = @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="app_name">
          T.app_name = @app_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="short_name">
          T.short_name = @short_name
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="description">
          T.description = @description
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="is_enable">
          T.is_enable = @is_enable
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="logo">
          T.logo = @logo
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="sort">
          T.sort = @sort
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="group_id">
          T.group_id = @group_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="re_vision">
          T.re_vision = @re_vision
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_by">
          T.created_by = @created_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="created_time">
          T.created_time = @created_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_by">
          T.updated_by = @updated_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="updated_time">
          T.updated_time = @updated_time
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_by">
          T.deleted_by = @deleted_by
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="deleted_time">
          T.deleted_time = @deleted_time
        </IsNotEmpty>
      </Where>
    </Statement>

    <!--自定义查询  分页数据-->
    <Statement Id="QueryDataByPage">
      Select T.*
      From sys_app As T
      <Include RefId="QueryDataParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      Limit @limit Offset @offset
    </Statement>

    <!--自定义查询  获取记录数-->
    <Statement Id="GetDataRecord">
      Select Count(1) From sys_user T
      <Include RefId="QueryDataParams" />
    </Statement>

  </Statements>
</SmartSqlMap>