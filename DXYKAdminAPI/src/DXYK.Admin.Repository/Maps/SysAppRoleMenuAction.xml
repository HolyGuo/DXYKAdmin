<SmartSqlMap Scope="SysAppRoleMenuAction" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">

    <Statements>

<Statement Id="AllCols">
T.id,T.role_id,T.menu_id</Statement>        <Statement Id="QueryParams">
            <Where>
