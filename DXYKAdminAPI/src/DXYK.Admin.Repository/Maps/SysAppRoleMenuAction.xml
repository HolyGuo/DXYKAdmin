<!--新增-->
<Statement Id="Insert">
    <IdGenerator Name="SnowflakeId" Id="id"/>
    INSERT INTO sys_app_role_menu_action
    (
      id,
      role_id,
      menu_id
    )
    VALUES
    (
      @id,
      @role_id,
      @menu_id
    )
</Statement>

<!--删除-->
    <Statement Id="Delete">
        Delete From sys_app_role_menu_action
        Where id=@id
    </Statement>
<!--更新-->
<Statement Id="Update">
    UPDATE sys_app_role_menu_action
    <Set>
                <IsProperty Prepend="," Property="role_id">
                    role_id = @role_id
                </IsProperty>
                <IsProperty Prepend="," Property="menu_id">
                    menu_id = @menu_id
                </IsProperty>
    </Set>
    Where id=@id
</Statement>

<!--获取数据列-->
<Statement Id="Query" >
    SELECT
    <Include RefId="AllCols" />
    From sys_app_role_menu_action T
    <Include RefId="QueryParams" />
