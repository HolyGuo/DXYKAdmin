<SmartSqlMap Scope="SysUserAppRole" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">

  <Statements>

    <Statement Id="AllCols">
      T.id,T.user_id,T.app_id,T.role_id,T.group_id
    </Statement>
    <Statement Id="QueryParams">
      <Where>
        <IsNotEmpty Prepend="And" Property="id">
          T.id = @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="user_id">
          T.user_id = @user_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="app_id">
          T.app_id = @app_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="role_id">
          T.role_id = @role_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="group_id">
          T.group_id = @group_id
        </IsNotEmpty>
      </Where>
    </Statement>

    <!--新增-->
    <Statement Id="Insert">
      <IdGenerator Name="SnowflakeId" Id="id"/>
      INSERT INTO sys_user_app_role
      (
      id,
      user_id,
      app_id,
      role_id,
      group_id
      )
      VALUES
      (
      @id,
      @user_id,
      @app_id,
      @role_id,
      @group_id
      );
      Select @id;
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete From sys_user_app_role
      Where id=@id
    </Statement>
    <!--更新-->
    <Statement Id="Update">
      UPDATE sys_user_app_role
      <Set>
        <IsProperty Prepend="," Property="user_id">
          user_id = @user_id
        </IsProperty>
        <IsProperty Prepend="," Property="app_id">
          app_id = @app_id
        </IsProperty>
        <IsProperty Prepend="," Property="role_id">
          role_id = @role_id
        </IsProperty>
        <IsProperty Prepend="," Property="group_id">
          group_id = @group_id
        </IsProperty>
      </Set>
      Where id=@id
    </Statement>

    <!--获取数据列-->
    <Statement Id="Query" >
      SELECT
      <Include RefId="AllCols" />
      From sys_user_app_role T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      <IsNotEmpty Prepend="Limit" Property="limit">@limit</IsNotEmpty>
    </Statement>


    <!--获取分页数据-->
    <Statement Id="QueryByPage" >
      Select
      <Include RefId="AllCols" />
      From sys_user_app_role As T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      Limit @limit Offset @offset
    </Statement>




    <!--获取记录数-->
    <Statement Id="GetRecord">
      Select Count(1) From sys_user_app_role T
      <Include RefId="QueryParams" />
    </Statement>


    <!--获取表映射实体-->
    <Statement Id="GetEntity" >
      Select
      <Include RefId="AllCols" />
      From sys_user_app_role As T
      <Where Min="1">
        <IsNotEmpty Prepend="And" Property="id">
          T.id= @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="user_id">
          T.user_id= @user_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="app_id">
          T.app_id= @app_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="role_id">
          T.role_id= @role_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="group_id">
          T.group_id= @group_id
        </IsNotEmpty>
      </Where>
      Limit 1
    </Statement>


    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From sys_user_app_role T
      <Include RefId="QueryParams" />
    </Statement>


    <!--************************************自定义SQL查询************************************-->
    <!---自定义  查询参数-->
    <Statement Id="QueryDataParams">
      <Where>
        <IsNotEmpty Prepend="And" Property="id">
          T.id = @id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="user_id">
          T.user_id = @user_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="app_id">
          T.app_id = @app_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="role_id">
          T.role_id = @role_id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="group_id">
          T.group_id = @group_id
        </IsNotEmpty>
      </Where>
    </Statement>

    <!--自定义查询  分页数据-->
    <Statement Id="QueryDataByPage">
      Select T.*
      From sys_user_app_role As T
      <Include RefId="QueryDataParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      Limit @limit Offset @offset
    </Statement>

    <!--自定义查询  获取记录数-->
    <Statement Id="GetDataRecord">
      Select Count(1) From sys_user T
      <Include RefId="QueryDataParams" />
    </Statement>

    <!--清除关联-->
    <Statement Id="ClearRelation">
      Delete From sys_user_app_role T
      <Where>
      <IsNotEmpty Prepend="And" Property="user_id">
        T.user_id = @user_id
      </IsNotEmpty>
      <IsNotEmpty Prepend="And" Property="app_id">
        T.app_id = @app_id
      </IsNotEmpty>
      <IsNotEmpty Prepend="And" Property="group_id">
        T.group_id = @group_id
      </IsNotEmpty>
      </Where>
    </Statement>

  </Statements>
</SmartSqlMap>