                </IsNotEmpty>
                <IsNotEmpty Prepend="And" Property="user_id">
                    T.user_id= @user_id
                </IsNotEmpty>
                <IsNotEmpty Prepend="And" Property="login_name">
                    T.login_name= @login_name
                </IsNotEmpty>
                <IsNotEmpty Prepend="And" Property="true_name">
