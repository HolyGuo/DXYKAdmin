<!--新增-->
<Statement Id="Insert">
    <IdGenerator Name="SnowflakeId" Id="id"/>
    INSERT INTO sys_log
    (
      id,
      app_id,
      logged_time,
      level,
      msg,
      exception,
      status,
      call_url,
      ip,
      user_id,
      login_name,
      true_name,
      browser
    )
    VALUES
    (
      @id,
      @app_id,
      @logged_time,
      @level,
      @msg,
      @exception,
      @status,
      @call_url,
      @ip,
      @user_id,
      @login_name,
      @true_name,
      @browser
    )
</Statement>

<!--删除-->
    <Statement Id="Delete">
        Delete From sys_log
        Where id=@id
    </Statement>
<!--更新-->
<Statement Id="Update">
    UPDATE sys_log
    <Set>
                <IsProperty Prepend="," Property="app_id">
                    app_id = @app_id
                </IsProperty>
                <IsProperty Prepend="," Property="logged_time">
                    logged_time = @logged_time
                </IsProperty>
                <IsProperty Prepend="," Property="level">
                    level = @level
                </IsProperty>
                <IsProperty Prepend="," Property="msg">
                    msg = @msg
                </IsProperty>
                <IsProperty Prepend="," Property="exception">
                    exception = @exception
                </IsProperty>
                <IsProperty Prepend="," Property="status">
                    status = @status
                </IsProperty>
                <IsProperty Prepend="," Property="call_url">
                    call_url = @call_url
                </IsProperty>
                <IsProperty Prepend="," Property="ip">
                    ip = @ip
                </IsProperty>
                <IsProperty Prepend="," Property="user_id">
                    user_id = @user_id
                </IsProperty>
                <IsProperty Prepend="," Property="login_name">
                    login_name = @login_name
                </IsProperty>
                <IsProperty Prepend="," Property="true_name">
                    true_name = @true_name
                </IsProperty>
                <IsProperty Prepend="," Property="browser">
                    browser = @browser
                </IsProperty>
    </Set>
    Where id=@id
</Statement>

<!--获取数据列-->
<Statement Id="Query" >
    SELECT
    <Include RefId="AllCols" />
    From sys_log T
    <Include RefId="QueryParams" />
    <Switch Prepend="Order By" Property="OrderBy">
        <Default>
            T.id Desc
        </Default>
    </Switch>
    <IsNotEmpty Prepend="Limit" Property="limit">@limit</IsNotEmpty>
</Statement>


    <!--获取分页数据-->
    <Statement Id="QueryByPage" >
        Select
        <Include RefId="AllCols" />
        From sys_log As T
        <Include RefId="QueryParams" />
        <Switch Prepend="Order By" Property="OrderBy">
            <Default>
                T.id Desc
            </Default>
        </Switch>
        Limit @limit Offset @offset
    </Statement>




<!--获取记录数-->
<Statement Id="GetRecord">
    Select Count(1) From sys_log T
    <Include RefId="QueryParams" />
</Statement>


